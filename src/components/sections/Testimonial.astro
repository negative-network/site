---
const { name, job, text } = Astro.props;
---
<div class="flex flex-col justify-between h-full">
  <div>
    <p class="mt-4 text-gray-500 lg:text-sm">
      "{text}"
    </p>
  </div>
  <footer class="mt-8">
    <p class="text-gray-500 lg:text-sm font-display">{name}</p>
    <p><small>{job}</small></p>
  </footer>
</div>
