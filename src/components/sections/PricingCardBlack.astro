---
const { title, description, price, features } = Astro.props;
---

<section
  class="flex flex-col order-first px-6 py-8 bg-black rounded-3xl sm:px-8 lg:-mt-24 lg:order-none"
>
  <h3 class="mt-5 text-lg text-white font-display">{title}</h3>
  <p class="mt-2 text-sm text-accent-100">
    {description}
  </p>
  <p
    class="order-first text-5xl font-light tracking-tight text-white font-display"
  >
    {price}
  </p>
  <ul
    role="list"
    class="flex flex-col order-last mt-10 text-sm text-white gap-y-3"
  >
    {
      features.map((feature) => (
        <li class="flex items-center">
          <>
            <ion-icon
              class="w-4 h-4 md hydrated"
              name="checkmark-outline"
              role="img"
              aria-label="checkmark outline"
            />
            <span class="ml-4">{feature}</span>
          </>
        </li>
      ))
    }
  </ul>
  <a
    class="inline-flex items-center justify-center w-full h-12 px-6 py-3 mt-8 text-center text-black transition duration-200 ease-in-out transform bg-white border-2 border-white hover:bg-transparent hover:border-white rounded-xl hover:text-white focus:outline-none"
    aria-label="Indie hacker tier"
    href="/contact">Nous contacter</a
  >
</section>
